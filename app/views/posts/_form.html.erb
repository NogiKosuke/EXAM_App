<%= form_with(model: @post, local: true, url: choose_act ) do |form| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= @post.errors.count %>件のエラーがあります。</h2>
      <ul>

      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="post_content">
    <%= form.label :content, "内容" %>
    <%= form.text_field :content, :size=>"50" %>
  </div>
  <%= form.submit %>
<% end %>
<br>
